---
// Supports weights 100-900
import '@fontsource-variable/inter'
import '@fontsource/inder'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative text-obscure dark:text-light">
		<div
			class="fixed top-0 z-[-2] h-screen w-screen bg-light dark:bg-obscure dark:bg-[radial-gradient(100%_50%_at_50%_0%,rgba(255,182,32,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
		>
		</div>

		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-obscure: #020202;
		--color-light: #f2f2f2;
		--color-golden: #ffb620;
	}
	html {
		font-family: 'Inter variant', sans-serif;
	}
</style>
